<h1 class="mt-4 mb-4 text-center"> Current Stream Rules <h1>


<% @rules['data'].each do |rule| %>
    <% value = rule['value'] %>
    <% category = rule['tag'] %>
    <div class="card mt-4 mb-4">
        <div class="card-header text-center" id="homepage-card-header">
            <h3> Category: <%= category %> </h3>
        </div>
        <div class="card-body mt-4 mb-4 text-center">
            <%= value  %> 
        </div>
        <div class="card-footer text-center">
            <%= link_to "Remove Rule", root_path, class: "btn btn-warning" %>
        </div>
    </div>
    
<% end %>
