<h1 class="mt-4 mb-4 text-center"> Current Stream Rules <h1>


<% @rules.each do |rule| %>
    <div class="card mt-4 mb-4">
        <div class="card-header text-center" id="homepage-card-header">
            <h3> Category: <%= rule.category %> </h3>
        </div>
        <div class="card-body mt-4 mb-4 text-center">
            <%= rule.value  %> 
        </div>
        <div class="card-footer text-center">
            <%= link_to "Remove Rule", rules_path(rule), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-warning" %>
        </div>
    </div>
    
<% end %>
